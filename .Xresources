! ~/.Xresources

*geometry: 120x40
*imLocale: en_US.UTF-8
*urgentOnBell: false
*visualBell: false
*borderLess: false
*cursorBlink: true
*jumpScroll: true
*loginShell: true

URxvt.font: xft:Terminus:pixelsize=14:style=Regular,xft:Inconsolata\ for\ Powerline:pixelsize=14
URxvt.boldFont: xft:Terminus:style=Regular:pixelsize=14,xft:Inconsolata\ for\ Powerline:pixelsize=14
URxvt*letterSpace:
*saveLines: 65536
Xft.lcdfilter: ldcdefault
Xft.dpi: 100
Xft.antialias: true
Xft.rgba: true
Xft.hinting: true
Xft.hintstyle:  hintslight

URxvt*lineSpace: 0
URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*skipScroll:  true
URxvt.iso14755: off
URxvt.iso14755_52: off
URxvt*termName: rxvt-256color
URxvt.scrollstyle: plain
!URxvt*fading:  30
!URxvt.borderless: true
!URxvt*internalBorder: 0
URxvt*intensityStyles: false
URxvt.inputMethod: fcitx
URxvt.preeditType: OverTheSpot

URxvt*depth: 32
*utf8: 2
*URxvt.meta8: true
*metaSendsEscape: true
*highlightSelection: true
*trimSelection: true
*cutNewline: false
*colorBDMode: true
*colorBD: khaki
*colorULMode: true
*colorUL: tomato
*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48,35:48,58:48,63:48,61:48,44:48,38:48,59:48

URxvt.perl-lib: .urxvt/
URxvt.perl-ext-common: default,matcher

! Launch default browser with the a left click on a URL
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
! tabbedex is not provided by default (Debian/Ubuntu) put it in ~/.urxvt/
!URxvt.perl-ext-common: default,matcher,tabbedex
! tabbedex - appearance of tabs
!URxvt.tabbed.no-tabbedex-keys: yes
!URXvt.tabbed.reopen-on-close: yes
! Tabs: gray background, ~white text
! and the opposite for the currently focused tab
!URxvt.tabbed.tabbar-fg: 7
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 0
!URxvt.tabbed.tab-bg: 2
! Display the title of terminal next to tabs list
!URxvt.tabbed.title: true
!URxvt.tabbed.title-bg: 0
!URxvt.tabbed.title-fg: 2
! Bindings
!URxvt.keysym.C-T: perl:tabbedex:new_tab
!URxvt.keysym.C-R: perl:tabbedex:rename_tab
!URxvt.keysym.C-Page_Up: perl:tabbedex:prev_tab
!URxvt.keysym.C-Page_Down: perl:tabbedex:next_tab
!URxvt.keysym.C-S-Page_Up: perl:tabbedex:move_tab_left
!URxvt.keysym.C-S-Page_Down: perl:tabbedex:move_tab_right


!------------------------
